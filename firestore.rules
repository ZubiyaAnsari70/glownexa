rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Aapke purane USER rules (yeh sahi hain)
    match /users/{userId} {
      allow create;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // YEH NAYE RULES HAIN (History ke liye)
    match /skinAnalyses/{analysisId} {

      // User ko naya analysis 'create' karne dena
      // YEH CHECK KARTA HAI: Kya user logged-in hai?
      // AUR: Kya document ka 'userId' field user ki apni ID hai?
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // User ko apni purani history 'read', 'update', ya 'delete' karne dena
      // YEH CHECK KARTA HAI: Kya user logged-in hai?
      // AUR: Kya document (jo database mein pehle se hai) ka 'userId' user ki apni ID hai?
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
